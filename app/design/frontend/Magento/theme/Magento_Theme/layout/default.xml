<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
    </head>
    <body>
        <referenceBlock name="form.subscribe" remove="true" />
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="header.panel.wrapper" remove="true" />
        <referenceBlock name="store.links" remove="true" />
        <referenceBlock name="giftr-top-link" remove="true" />

        <referenceContainer name="header-wrapper">
            <container name="header-container" as="header-container" label="Header Container" htmlTag="div" htmlClass="container head-container">
                <container name="logo.wrapper" as="logo-wrap" label="Logo Wrapper" htmlTag="div"
                           htmlClass="logo_wrap" />
                <container name="menu.wrapper" as="menu-wrap" label="Menu Wrapper" htmlTag="div"
                           htmlClass="menu_wrap" />
                <container name="action.wrapper" as="action-wrap" label="Action Wrapper" htmlTag="div"
                           htmlClass="action_wrap" />
            </container>

        </referenceContainer>
        <referenceContainer name="footer-container">
            <block class="Magento\Cms\Block\Block" name="footer_links_block-elogic">
                <arguments>
                    <argument name="block_id" xsi:type="string">Links</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="scripts" template="Magento_Theme::init.phtml" after="-"/>
        </referenceContainer>
        <move element="logo" destination="logo.wrapper" after="-" />
        <move element="navigation.sections" destination="menu.wrapper" after="-" />
        <move element="top.links" destination="action.wrapper" after="-" />
        <move element="minicart" destination="action.wrapper" after="top.links" />
        <move element="top.search" destination="action.wrapper" after="minicart" />





    </body>
</page>
